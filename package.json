		"eslint-config-xo": "^0.43.1",
		"eslint-config-xo-typescript": "^0.34.0",
		"eslint-plugin-electron": "^7.0.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.3.3"
